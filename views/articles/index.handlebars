<div class="container">

	<h1 class="p-4">Articles</h1>
	<a href="/articles/new" class="btn btn-success">New Article</a>

	{{#each articles}}
	<div class="card mt-4">
		<div class="card-body">

			<h4 class="card-title">{{title}}</h4>

			<div class="div-subtitle text-muted mb-2">
				{{createdAt}}
			</div>

			<div class="card-text mb-2">
				{{description}}
			</div>

			<a href="articles/{{slug}}" class="btn btn-primary">Read More</a>
			
			<form action="/articles/{{_id}}?_method=DELETE" method="POST" class="d-inline">
				<button type="submit" class="btn btn-danger">Delete</button>
			</form>

		</div>
	</div>
	{{/each}}

</div>